<%= form_with model: form, url: weather_path, method: :get, local: true do |f| %>
  <div>
    <%= f.label :city, 'City:' %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state, 'State (required only for US):' %>
    <%= f.text_field :state %>
  </div>

  <div class="form-field">
    <%= f.label :country, 'Country Code:' %>
    <%= f.text_field :country %>
  </div>

  <%= hidden_field_tag :submitted, true %>

  <%= f.submit 'Get Weather' %>
<% end %>
